syntax on
set fileencoding=utf-8
set hidden
set ignorecase

set noexpandtab
set autoindent
set tabstop=2
set shiftwidth=2

set number
set rnu
set scrolloff=5
set splitright

set termguicolors
set noswapfile
set signcolumn=yes

colorscheme oceanic
hi Normal guibg=NONE ctermbg=NONE
hi pythonSpaceError guibg=NONE ctermbg=NONE 

let g:rainbow_active = 1
